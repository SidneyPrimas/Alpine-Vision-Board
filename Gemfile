source 'https://rubygems.org'

gem 'rails', '3.2.7'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

group :development do
  gem 'sqlite3', '1.3.5'
end


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  # See https://github.com/sstephenson/execjs#readme for more supported runtimes
  # gem 'therubyracer', :platforms => :ruby

  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

#This sets up rspec in rails. The group is only used for test and development
group :test, :development do
  gem 'rspec-rails' #rspec rails
  gem 'capybara' #Performs actions (like opening browser to test form) for testing for youbu
  gem 'guard-rspec' #Helps us automatically run our tests
  gem 'ruby_gntp' #Uses growl notifications for testing. Use this, not growl_notify
  gem 'launchy'   #Gets a visual snapshot of what is going on. 
  
end

